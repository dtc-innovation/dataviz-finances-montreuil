{
  "name": "dataviz-finances-montreuil",
  "private": true,
  "version": "1.0.8",
  "description": "...",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "serve": "serve -l 3000 --no-clipboard",
    "start": "npm-run-all -s build:data:* -p serve watch:*",
    "test": "jest",
    "build": "run-s build:data:* build:env:*",
    "build:env:prod": "cross-env NODE_ENV=production BASE_URL=${BASE_URL:=https://dtc-innovation.github.io/dataviz-finances-montreuil} run-p build:bundle:*",
    "build:env:demo": "cross-env NODE_ENV=demo BUNDLE_SUFFIX='.dev' BASE_URL=${BASE_URL:=https://dtc-innovation.github.io/dataviz-finances-montreuil} run-p build:bundle:*",
    "build:bundle:style": "sass src/public/style/main.scss build/public${BUNDLE_SUFFIX}.css",
    "build:bundle:script": "browserify src/public/js/main.js -o build/dataviz-finance-bundle${BUNDLE_SUFFIX}.js -p tinyify",
    "build:bundle:overview": "browserify src/finance-overview/js/main.js -o build/finance-overview-bundle${BUNDLE_SUFFIX}.js -p tinyify",
    "build:data:finance-data": "cross-env SOURCE_COMPTES_DIR=data/finances/plansDeCompte SOURCE_CA_DIR=data/finances/CA BUILD_FINANCE_DIR=build/finances node tools/make-finance-data.js",
    "build:data:finance-strings": "cross-env SOURCE_COMPTES_DIR=data/finances/plansDeCompte BUILD_FINANCE_DIR=build/finances node tools/make-doc-budg-strings.js",
    "dl:plans-de-compte": "plans-de-compte --in data/finances/CA --out data/finances/plansDeCompte",
    "watch:bundle": "cross-env NODE_ENV=development BUNDLE_SUFFIX='.dev' BASE_URL=http://localhost:3000 run-p watch:bundle:*",
    "watch:bundle:style": "sass --watch src/public/style/main.scss build/public${BUNDLE_SUFFIX}.css",
    "watch:bundle:script": "watchify --iw **/node_modules/** src/finance-overview/js/main.js -o build/finance-overview-bundle${BUNDLE_SUFFIX}.js -d -v",
    "lint": "eslint --ignore-path .gitignore src/",
    "lint-fix": "npm run lint -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dtc-innovation/dataviz-finances-montreuil"
  },
  "author": "dtc innovation",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dtc-innovation/dataviz-finances-montreuil/issues"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>tests/setupTests.js"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!document-budgetaire).+\\.js$"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/src/document-budgetaire/node_modules/"
    ]
  },
  "homepage": "https://github.com/dtc-innovation/dataviz-finances-montreuil",
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "dependencies": {
    "clsx": "^2.0.0",
    "currency-formatter": "^1.5.9",
    "d3-array": "^2.12.1",
    "d3-dsv": "^1.2.0",
    "d3-fetch": "^1.2.0",
    "d3-hierarchy": "^1.1.9",
    "d3-scale": "^1.0.7",
    "d3-shape": "^1.3.7",
    "document-budgetaire": "file:src/document-budgetaire",
    "fast-memoize": "^2.5.2",
    "immutable": "^4.3.7",
    "lodash.memoize": "^4.1.2",
    "markdown-it": "^8.4.2",
    "markdown-it-link-attributes": "^2.1.0",
    "nearley": "^2.20.1",
    "page": "^1.11.6",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-redux": "^7.2.9",
    "react-tooltip": "^4.0.0",
    "redux": "^4.2.1",
    "uuid": "^3.4.0",
    "xml-buffer-tostring": "^0.2.0",
    "xmldom": "^0.1.31"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.25.9",
    "@babel/preset-react": "^7.25.9",
    "@cfaester/enzyme-adapter-react-18": "^0.8.0",
    "babel-jest": "^29.7.0",
    "babel-plugin-inline-react-svg": "^2.0.0",
    "babel-plugin-transform-inline-environment-variables": "^0.4.0",
    "babelify": "^10.0.0",
    "browserify": "^16.5.2",
    "cross-env": "^7.0.0",
    "enzyme": "^3.11.0",
    "eslint": "^5.16.0",
    "eslint-plugin-react": "^7.37.2",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-immutable-matchers": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "plans-de-compte": "git+https://github.com/dtc-innovation/plans-de-compte.git#cd8b03b",
    "sass": "^1.80.3",
    "serve": "^11.3.2",
    "tinyify": "^2.5.2",
    "watchify": "^3.11.1"
  }
}
