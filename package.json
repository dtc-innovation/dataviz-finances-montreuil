{
  "name": "dataviz-finances-montreuil",
  "private": true,
  "version": "1.0.0",
  "description": "...",
  "main": "index.js",
  "scripts": {
    "watch": "run-p watch:*",
    "serve": "http-server --cors -p 3000 -a 127.0.0.1 .",
    "start": "run-p serve watch:*",
    "test": "jest",
    "build-demo": "cross-env NODE_ENV=demo npm-run-all --serial build-demo:public build:m52overview",
    "build:m52overview": "npm-run-all build:m52overview:script",
    "build:m52overview:script": "browserify src/m52-overview/js/main.js -o build/m52-overview-bundle.js -d",
    "build-demo:public": "npm-run-all --serial build:public:data:* --parallel build:public:style build:public:script",
    "build:public:style": "node-sass --importer src/public/style/env-importer.js src/public/style/main.scss build/public.css",
    "build:public:script": "browserify src/public/js/main.js -o build/dataviz-finance-bundle.js -p [minifyify --no-map]",
    "build:public:data:finance-data": "node -r esm tools/make-public-data.js",
    "build:public:data:m52-strings": "node -r esm tools/make-doc-budg-strings.js",
    "dl:plans-de-compte": "npx github:dtc-innovation/plans-de-compte --in data/finances/CA --out data/finances/plansDeCompte",
    "watch:m52overview": "cross-env NODE_ENV=development watchify src/m52-overview/js/main.js -o build/m52-overview-bundle.js -d -v",
    "prewatch:public": "run-s build:public:data:*",
    "watch:public": "cross-env NODE_ENV=development npm-run-all --parallel watch:public:*",
    "prewatch:public:style": "npm run build:public:style",
    "watch:public:style": "node-sass --importer src/public/style/env-importer.js --watch src/public/style/main.scss build/public.css",
    "watch:public:script": "watchify src/public/js/main.js -o build/dataviz-finance-bundle.js -d -v",
    "lint": "eslint --ignore-path .gitignore client/js",
    "lint-fix": "npm run lint -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dtc-innovation/dataviz-finances-montreuil"
  },
  "author": "dtc innovation",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dtc-innovation/dataviz-finances-montreuil/issues"
  },
  "jest": {
    "transformIgnorePatterns": [
      "/node_modules/(?!document-budgetaire).+\\.js$"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/src/document-budgetaire/node_modules/"
    ]
  },
  "homepage": "https://github.com/dtc-innovation/dataviz-finances-montreuil",
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "env"
          ],
          "plugins": [
            [
              "transform-inline-environment-variables",
              {
                "include": [
                  "NODE_ENV"
                ]
              }
            ]
          ]
        }
      ]
    ]
  },
  "esm": {
    "mode": "auto",
    "cjs": {
      "namedExports": true
    }
  },
  "dependencies": {
    "currency-formatter": "^1.5.3",
    "d3-array": "^1.2.4",
    "d3-color": "^1.2.3",
    "d3-dsv": "^1.1.1",
    "d3-scale": "^1.0.7",
    "d3-shape": "^1.3.4",
    "document-budgetaire": "file:src/document-budgetaire",
    "esm": "^3.2.4",
    "event-emitter": "^0.3.4",
    "fs-extra": "^4.0.3",
    "immutable": "^3.8.1",
    "lodash.memoize": "^4.1.2",
    "markdown-it": "^8.4.2",
    "markdown-it-link-attributes": "^2.1.0",
    "page": "^1.11.4",
    "react": "^15.6.2",
    "react-dom": "^15.6.2",
    "react-redux": "^5.1.1",
    "redux": "^3.6.0",
    "uuid": "^3.3.2",
    "xml-buffer-tostring": "^0.2.0",
    "xmldom": "^0.1.27"
  },
  "devDependencies": {
    "babel-jest": "^18.0.0",
    "babel-plugin-transform-inline-environment-variables": "^0.2.0",
    "babel-plugin-inline-svg": "^1.0.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^13.1.1",
    "cross-env": "^3.2.4",
    "enzyme": "^2.9.1",
    "eslint": "^3.14.0",
    "http-server": "^0.11.1",
    "jest": "^23.6.0",
    "jest-immutable-matchers": "^1.4.0",
    "minifyify": "^7.3.5",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "react-test-renderer": "^15.6.2",
    "watchify": "^3.11.0"
  }
}
